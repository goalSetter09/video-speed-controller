{
  "manifest_version": 3,
  "name": "Video Speed Controller",
  "version": "1.1.2",
  "description": "Control video playback speed with keyboard shortcuts. Press ',' to slow down, '.' to speed up, and 'r' to toggle preferred speed.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "src/shared/config.js",
        "src/shared/messages.js",
        "src/shared/storage.js",
        "src/content/state.js",
        "src/content/video-controller.js",
        "src/content/overlay-manager.js",
        "src/content/video-tracker.js",
        "src/content/keyboard-handler.js",
        "src/content/bootstrap.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  }
}
